# Пример файла настроек
# Скопируйте этот файл как dev.env или prod.env и заполните реальными значениями

# Режим отладки
DEBUG=True

# Логирование
LOGGING__LEVEL=DEBUG

# App
APP__HOST=0.0.0.0
APP__PORT=8000
APP__FRONTEND_HOST=localhost
APP__FRONTEND_PORT=80

# Security
SECURITY__SECRET_KEY=secret-key
SECURITY__REFRESH_SECRET_KEY=secret-refresh-key

# KuCoin API (получите на https://www.kucoin.com/account/api)
KUCOIN__API_KEY=your-api-key-here
KUCOIN__API_SECRET=your-api-secret-here
KUCOIN__API_PASSPHRASE=your-api-passphrase-here

# База данных PostgreSQL
DATABASE__USER=your-db-user
DATABASE__PASSWORD=your-db-password
DATABASE__HOST=localhost
DATABASE__DB_NAME=your-db-name
DATABASE__PORT=5432